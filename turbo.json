{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "API_SECRET",
        "NEXT_PUBLIC_API_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@repo/db#build": {
      "outputs": [
        "node_modules/.prisma/**",
        "prisma/**"
      ]
    }
  }
}
